<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/iv_picture"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_width="85dp"
        android:layout_height="85dp" />

    <CheckBox
        android:id="@+id/cb_visited"
        android:layout_width="wrap_content"
        android:layout_height="45dp"

        android:paddingTop="50dp"
        android:layout_above="@+id/tv_distance"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tv_shopName"
        android:layout_height="45dp"

        android:paddingLeft="10dp"

        android:textSize="18dp"

        android:text="@string/placeholder"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/iv_picture"
        android:layout_width="260dp" />

    <TextView
        android:id="@+id/tv_address"

        android:paddingLeft="15dp"

        android:text="@string/placeholder_address"
        android:layout_height="45dp"
        android:textAlignment="viewStart"
        android:textSize="15dp"
        android:layout_alignBottom="@+id/iv_picture"
        android:layout_toEndOf="@+id/iv_picture"
        android:layout_width="235dp" />

    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:paddingTop="20dp"
        android:paddingRight="5dp"

        android:textSize="15dp"
        android:textStyle="bold"

        android:text="@string/placeholder_dist"
        android:layout_alignTop="@+id/tv_address"
        android:layout_alignParentEnd="true" />


</RelativeLayout>