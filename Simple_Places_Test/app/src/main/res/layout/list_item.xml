<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_picture"
        android:layout_width="75dp"
        android:layout_height="75dp"

        />

    <TextView
        android:id="@+id/tv_shopName"
        android:layout_width="200dp"
        android:layout_height="45dp"

        android:layout_toRightOf="@id/iv_picture"
        android:paddingLeft="10dp"

        android:textSize="18dp"

        android:text="@string/placeholder"/>

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="200dp"
        android:layout_height="30dp"

        android:layout_toRightOf="@id/iv_picture"
        android:layout_alignBottom="@id/iv_picture"

        android:paddingLeft="15dp"

        android:textSize="15dp"

        android:text="@string/placeholder_address" />

    <CheckBox
        android:id="@+id/cb_visited"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentRight="true"

        android:paddingTop="50dp"
        />

    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_toLeftOf="@id/cb_visited"

        android:paddingTop="20dp"
        android:paddingRight="5dp"

        android:textSize="15dp"
        android:textStyle="bold"

        android:text="@string/placeholder_dist" />


</RelativeLayout>